{% extends '::layout.html.twig' %}

{% block title %}NinjaTooken - {{ 'menu.contact'|trans({}, 'menu') }}{% endblock %}
{% block description %}{{ 'description.meta.contact'|trans }}{% endblock %}
{% block keywords %}{{ 'keywords.meta.contact'|trans }}{% endblock %}

{% block breadcrumbs1 %}{% endblock %}

{% block breadcrumbs2 %}
							<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
								<a href="{{ path('ninja_tooken_contact') }}" itemprop="url">
									<span itemprop="title">{{ 'menu.contact'|trans({}, 'menu') }}</span>
								</a>
							</span>
{% endblock %}

{% block body %}
				<form action="#" method="post" accept-charset="UTF-8" class="full" id="contact">
					<div class="row-fluid">
						<div class="span3 offset1">
							<label class="libelle required" for="email">{{ 'form.mail'|trans }}</label>
						</div>
						<div class="span8">
							<input type="email" name="email" id="email" value="" required>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span3 offset1">
							<label class="libelle required" for="sujet">{{ 'form.sujet'|trans }}</label>
						</div>
						<div class="span8">
							<input type="text" name="sujet" id="sujet" value="" required>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span3 offset1">
							<label class="libelle required" for="content">{{ 'form.message'|trans }}</label>
						</div>
						<div class="span8">
							<div class="textarea" name="content" id="content"></div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span3 offset1">
							<label class="libelle required">{{ 'form.captcha'|trans }}</label>
						</div>
						<div class="span8" id="mc">
							<p>{{ 'form.captchaMessage'|trans }}</p>
							<canvas id="mc-canvas">{{ 'description.canvas'|trans }}</canvas>
							<input type="hidden" id="mc-action" value="{{ path('ninja_tooken_contact') }}">
						</div>
					</div>
					<div class="row-fluid">
						<div class="span8 offset4">
							<input type="hidden" name="_token" value="{{ csrf_token('contact' ~ app.session.id) }}">
							<input type="submit" value="{{ 'action.envoyer'|trans }}" class="button" disabled>
						</div>
					</div>
				</form>
{% endblock %}
