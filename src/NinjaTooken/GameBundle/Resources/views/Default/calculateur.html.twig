{% extends '::layout.html.twig' %}

{% block title %}NinjaTooken - Calculateur{% endblock %}
{% block description %}Le calculateur de jutsu permet de connaitre pour chaque jutsu et selon le nombre de points appliqués, les dégâts et effets.{% endblock %}
{% block keywords %}NinjaTooken, shinobi, ninja, calculateur, jutsu, compétence, fps, gratuit, online, free{% endblock %}

{% block breadcrumbs1 %}{% endblock %}

{% block breadcrumbs2 %}
							<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
								<a href="{{ path('ninja_tooken_game_calculateur') }}" itemprop="url">
									<span itemprop="title">Calculateur jutsus</span>
								</a>
							</span>
{% endblock %}

{% block body %}
				<section class="main">
                    <form class="full" name="calculateur" method="post" action="#">
                        <h3>Capacités</h3>
                        <div class="row-fluid">
                            <div class="span2 offset4"><em>points</em></div>
                            <div class="span6"><em>effets</em></div>
                        </div>
					    {% for key, capacite in capacites %}
                        <div class="row-fluid">
                            <div class="span3 offset1"><label class="libelle">{{ capacite.nom }}</label></div>
                            <div class="span2">
                                <label class="select">
                                    <select name="capacite {{ key }}">
                                    {% for i in 1..100 %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                    </select>
                                </label>
                            </div>
                            <div class="span6"><span class="result {{ key }}"></span></div>
                        </div>
                        {% endfor %}
                        <div class="row-fluid">
                            <div class="span6">dégâts à l'épée</div>
                            <div class="span6"></div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">dégâts au kunaï</div>
                            <div class="span6"></div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">dégâts au shuriken</div>
                            <div class="span6"></div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">dégâts au shuriken de l'ombre</div>
                            <div class="span6"></div>
                        </div>

                        <h3>Jutsus</h3>
                        <div class="row-fluid">
                            <div class="span2 offset4"><em>points</em></div>
                            <div class="span6"><em>effets</em></div>
                        </div>
					    {% for key, aptitude in aptitudes %}
                        <div class="row-fluid">
                            <div class="span3 offset1"><label class="libelle">{{ aptitude.nom }}</label></div>
                            <div class="span2">
                                <label class="select">
                                    <select name="aptitude {{ key }}">
                                    {% for i in 1..30 %}
                                        <option value="{{ i }}">{{ i }}</option>
                                    {% endfor %}
                                    </select>
                                </label>
                            </div>
                            <div class="span6"><span class="result {{ key }}"></span></div>
                        </div>
                        {% endfor %}
                    </form>
                </section>
{% endblock %}
