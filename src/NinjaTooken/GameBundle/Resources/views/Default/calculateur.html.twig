{% extends '::layout.html.twig' %}

{% block title %}NinjaTooken - Calculateur{% endblock %}
{% block description %}Le calculateur de jutsu permet de connaitre pour chaque jutsu et selon le nombre de points appliqués, les dégâts et effets.{% endblock %}
{% block keywords %}NinjaTooken, shinobi, ninja, calculateur, jutsu, compétence, fps, gratuit, online, free{% endblock %}

{% block breadcrumbs1 %}{% endblock %}

{% block breadcrumbs2 %}
							<span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
								<a href="{{ path('ninja_tooken_game_calculateur') }}" itemprop="url">
									<span itemprop="title">Calculateur jutsus</span>
								</a>
							</span>
{% endblock %}

{% block body %}
				<section class="main">
                    <form class="full" name="calculateur" method="post" action="#">
                        <div class="row-fluid">
                            <div class="span3"><label class="libelle">Classe</label></div>
                            <div class="span9">
                                <label class="select">
                                    <select name="calculateurLimit">
                                        {% for k, v in classes %}
                                        <option value="{{ v|lower }}" class="{{ v|lower }}"{% if v|lower == classe %} selected{% endif %}>{{ v }}</option>
                                        {% endfor %}
                                    </select>
                                </label>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3"><label class="libelle">Niveau</label></div>
                            <div class="span2">
                                <label class="select">
                                    <select name="calculateurLevel" data-aptitude="{{ levelUp.aptitude }}" data-capacite="{{ levelUp.capacite }}">
                                    {% for i in 0..100 %}
                                        <option value="{{ i }}"{% if i == level %} selected{% endif %}>{{ i }}</option>
                                    {% endfor %}
                                    </select>
                                </label>
                            </div>
                            <div class="span7">
                                Points de capacités disponibles : <strong><span class="result" data-id="ptsCapacite"></span></strong><br>
                                Points de jutsus disponibles : <strong><span class="result" data-id="ptsAptitude"></span></strong>
                            </div>
                        </div>
                        
                        <h3>Capacités</h3>
			            {% for key, capacite in capacites %}
                        <div class="row-fluid calculateur-capacite">
                            <div class="span3"><label class="libelle">{{ capacite.nom }}</label></div>
                            <div class="span2">
                                <label class="select">
                                    <select name="capacite" data-id="{{ key }}" data-json="{{ capacite.xml }}">
                                    {% for i in 0..100 %}
                                        <option value="{{ i }}"{% if i == capacite.current %} selected{% endif %}>{{ i }}</option>
                                    {% endfor %}
                                    </select>
                                </label>
                            </div>
                            <div class="span7"><span class="result" data-id="{{ key }}"></span></div>
                        </div>
                        {% endfor %}

                        <div class="row-fluid">
                            <div class="span9 offset3">Points restants : <strong><span class="result" data-id="total-capacites"></span></strong></div>
                        </div>

                        <h3>Jutsus</h3>
			            {% for key, aptitude in aptitudes %}
                        <div class="row-fluid calculateur-jutsu" data-limit="{{ aptitude.limit }}" data-niveau="{{ aptitude.niveau }}">
                            <div class="span3"><label class="libelle {{ aptitude.limit }}">{{ aptitude.nom }}</label></div>
                            <div class="span2">
                                <label class="select">
                                    <select name="aptitude" data-id="{{ key }}" data-json="{{ aptitude.xml }}" data-attr="{{ aptitude.values }}">
                                    {% for i in 0..30 %}
                                        <option value="{{ i }}"{% if i == aptitude.current %} selected{% endif %}>{{ i }}</option>
                                    {% endfor %}
                                    </select>
                                </label>
                            </div>
                            <div class="span7"><span class="result" data-id="{{ key }}"></span></div>
                        </div>
                        {% endfor %}

                        <div class="row-fluid">
                            <div class="span9 offset3">Points restants : <strong><span class="result" data-id="total-aptitudes"></span></strong></div>
                        </div>
                    </form>
                </section>
{% endblock %}
